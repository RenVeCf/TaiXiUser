<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:paddingBottom="@dimen/small_padding"
    android:paddingLeft="@dimen/base_padding"
    android:paddingRight="@dimen/base_padding"
    android:paddingTop="@dimen/small_padding">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/product" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/BaseTextStyle"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/base_padding"
        android:layout_marginTop="@dimen/small_padding"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="酵素青汁"
        app:layout_constraintLeft_toRightOf="@id/iv_product"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_product_desc"
        style="@style/SmallTextStyle"
        android:text="库存：3箱"
        android:textColor="@color/LightGrey"
        app:layout_constraintBottom_toTopOf="@id/tv_stock_single"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />


    <com.ipd.taixiuser.widget.ProductOperationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_product"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_product" />


    <TextView
        android:id="@+id/tv_stock_single"
        style="@style/SmallTextStyle"
        android:layout_marginBottom="@dimen/small_padding"
        android:text="库存：0盒"
        android:textColor="@color/LightGrey"
        app:layout_constraintBottom_toBottomOf="@id/iv_product"
        app:layout_constraintLeft_toLeftOf="@id/tv_title" />


    <com.ipd.taixiuser.widget.ProductOperationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_product"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>