<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:paddingBottom="@dimen/small_padding"
    android:paddingLeft="@dimen/base_padding"
    android:paddingRight="@dimen/base_padding"
    android:paddingTop="@dimen/small_padding">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/matter_img" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/BaseTextStyle"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/base_padding"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="『查询』青汁怎样查真伪？"
        app:layout_constraintBottom_toTopOf="@id/tv_desc"
        app:layout_constraintLeft_toRightOf="@id/iv_product"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />


    <TextView
        android:id="@+id/tv_desc"
        style="@style/SmallTextStyle"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/small_padding"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="我们每一盒青汁上，都有彩色的二维码标签，都有彩色的二维码标签都有彩色的二维码标签"
        android:textColor="@color/LightGrey"
        app:layout_constraintBottom_toTopOf="@id/cl_bottom"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="@id/iv_product"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc">


        <TextView
            android:id="@+id/tv_zan"
            style="@style/SmallTextStyle"
            android:drawableLeft="@drawable/selector_zan_small"
            android:drawablePadding="5dp"
            android:text="100"
            android:textColor="@color/LightGrey"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_collect" />

        <TextView
            android:id="@+id/tv_collect"
            style="@style/SmallTextStyle"
            android:drawableLeft="@drawable/selector_collect_small"
            android:drawablePadding="5dp"
            android:text="100"
            android:textColor="@color/LightGrey"
            app:layout_constraintLeft_toRightOf="@id/tv_zan"
            app:layout_constraintRight_toLeftOf="@id/tv_time" />


        <TextView
            android:id="@+id/tv_time"
            style="@style/SmallTextStyle"
            android:text="2018-08-08"
            android:textColor="@color/LightGrey"
            app:layout_constraintLeft_toRightOf="@id/tv_collect"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>