<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@color/white"
    android:paddingLeft="@dimen/base_padding"
    android:paddingTop="@dimen/base_padding"
    android:paddingRight="@dimen/base_padding"
    android:paddingBottom="@dimen/base_padding">


    <TextView
        android:id="@+id/tv_note_content"
        style="@style/BaseTextStyle"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="毛孩子都天生自带萌属性，有些则有自己独特的撒娇卖萌方式:抱着人腿或手臂就不松手，是小妖精变得吧" />

    <LinearLayout
        android:id="@+id/ll_comment_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_padding"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_note_content">

        <TextView
            android:id="@+id/tv_sub_comment_time"
            style="@style/SmallTextStyle"
            android:textColor="@color/LightGrey"
            tools:text="来自《基本功能手册》" />


        <TextView
            android:id="@+id/tv_sub_comment_zan_num"
            style="@style/SmallTextStyle"
            android:layout_marginTop="@dimen/small_padding"
            android:text="12-02"
            android:textColor="@color/LightGrey" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_note_edit"
            style="@style/BaseTextStyle"
            android:background="@drawable/shape_note_btn"
            android:paddingLeft="20dp"
            android:paddingTop="4dp"
            android:paddingRight="20dp"
            android:paddingBottom="4dp"
            android:text="编辑"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tv_note_delete"
            style="@style/BaseTextStyle"
            android:background="@drawable/shape_note_btn"
            android:paddingLeft="20dp"
            android:paddingTop="4dp"
            android:layout_marginLeft="@dimen/small_padding"
            android:paddingRight="20dp"
            android:paddingBottom="4dp"
            android:text="删除"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>