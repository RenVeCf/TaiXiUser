<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_avatar"
                style="@style/BaseTableStyle">

                <TextView
                    style="@style/BaseTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="头像" />

                <com.ipd.jumpbox.jumpboxlibrary.widget.CircleImageView
                    android:id="@+id/civ_avatar"
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"
                    android:src="@mipmap/customer_avatar" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_padding"
                    android:src="@mipmap/arrow_right" />

            </LinearLayout>

            <TextView
                style="@style/SmallTextStyle"
                android:layout_width="match_parent"
                android:background="@color/window_bg_color"
                android:paddingLeft="@dimen/base_padding"
                android:paddingTop="6dp"
                android:paddingRight="@dimen/base_padding"
                android:paddingBottom="6dp"
                android:text="基本信息"
                android:textColor="@color/LightGrey" />


            <LinearLayout style="@style/BaseTableStyle">

                <TextView
                    style="@style/BaseTextStyle"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/et_customer_name"
                    style="@style/BaseEditTextStyle"
                    android:gravity="right"
                    android:hint="请输入"
                    android:maxLength="12"
                    android:singleLine="true" />

            </LinearLayout>

            <View style="@style/ViewLine" />


            <LinearLayout style="@style/BaseTableStyle">

                <TextView
                    style="@style/BaseTextStyle"
                    android:text="微信号" />

                <EditText
                    android:id="@+id/et_customer_weixin"
                    style="@style/BaseEditTextStyle"
                    android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                    android:gravity="right"
                    android:hint="请输入"
                    android:maxLength="15"
                    android:singleLine="true" />

            </LinearLayout>

            <View style="@style/ViewLine" />

            <LinearLayout style="@style/BaseTableStyle">

                <TextView
                    style="@style/BaseTextStyle"
                    android:text="手机号" />

                <TextView
                    android:id="@+id/et_customer_phone"
                    style="@style/BaseEditTextStyle"
                    android:gravity="right"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true" />

            </LinearLayout>


            <TextView
                style="@style/SmallTextStyle"
                android:layout_width="match_parent"
                android:background="@color/window_bg_color"
                android:paddingLeft="@dimen/base_padding"
                android:paddingTop="6dp"
                android:paddingRight="@dimen/base_padding"
                android:paddingBottom="6dp"
                android:text="代理信息"
                android:textColor="@color/LightGrey" />

            <LinearLayout
                android:id="@+id/ll_level"
                style="@style/BaseTableStyle">

                <TextView
                    style="@style/BaseTextStyle"
                    android:text="级别" />

                <TextView
                    android:id="@+id/tv_level"
                    style="@style/BaseEditTextStyle"
                    android:gravity="right"
                    tools:text="代理FSDFS"
                    android:textColor="@color/LightGrey" />

            </LinearLayout>

            <View style="@style/ViewLine" />


            <LinearLayout
                android:id="@+id/ll_leader"
                style="@style/BaseTableStyle">

                <TextView
                    style="@style/BaseTextStyle"
                    android:text="上级" />

                <TextView
                    android:id="@+id/tv_leader"
                    style="@style/BaseEditTextStyle"
                    android:gravity="right"
                    tools:text="何红艳"
                    android:textColor="@color/LightGrey" />

            </LinearLayout>

            <TextView
                style="@style/SmallTextStyle"
                android:layout_width="match_parent"
                android:background="@color/window_bg_color"
                android:paddingLeft="@dimen/base_padding"
                android:paddingTop="6dp"
                android:paddingRight="@dimen/base_padding"
                android:paddingBottom="6dp"
                android:text="地址信息"
                android:textColor="@color/LightGrey" />

            <LinearLayout
                android:id="@+id/ll_city"
                style="@style/BaseTableStyle">

                <TextView
                    style="@style/BaseTextStyle"
                    android:text="地区" />

                <TextView
                    android:id="@+id/tv_city"
                    style="@style/BaseEditTextStyle"
                    android:gravity="right"
                    tools:text="上海 上海市 青浦区"
                    android:textColor="@color/LightGrey" />

            </LinearLayout>

            <View style="@style/ViewLine" />


            <LinearLayout
                android:id="@+id/ll_address"
                style="@style/BaseTableStyle">

                <TextView
                    style="@style/BaseTextStyle"
                    android:text="详细地址" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/BaseEditTextStyle"
                    android:gravity="right"
                    tools:text="华徐公路888号1号楼2楼IPD"
                    android:textColor="@color/LightGrey" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>